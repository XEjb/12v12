<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/layout/custom_game/common/toasts/toasts.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/layout/custom_game/common/toasts/toasts.js" />
	</scripts>

	<snippets>
		<snippet name="toast">
			<Panel class="Toast">
				<Panel class="ToastWrap">
					<Image id="ToastImage"/>
					<Panel class="ToastContent">
						<Label class="ToastHeader" html="true" text="{s:toast_header}"/>
						<Label class="ToastDescription" html="true" text="{s:toast_description}"/>
					</Panel>
				</Panel>
				<Button id="CloseButton" class="CloseButton"/>
			</Panel>
		</snippet>
	</snippets>

	<Panel class="ToastsContainer" hittest="false">
		<!-- filled from code -->
	</Panel>
</root>
