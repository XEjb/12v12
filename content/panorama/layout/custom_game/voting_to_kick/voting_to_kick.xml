<root>
	<styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="file://{resources}/layout/custom_game/voting_to_kick/voting_to_kick.css" />
	</styles>
 	<scripts>
		<include src="file://{resources}/layout/custom_game/common/utils.js" />
		<include src="file://{resources}/layout/custom_game/voting_to_kick/voting_to_kick.js" />
	</scripts>

 	<Panel hittest="false" class="VotingToKickRoot">

		<Panel id="VotingToKickReasonPanel">
			<Panel class="VotingToKickReasonHeadPanel">
				<Label class="VotingToKickReasonClose" onactivate="VotingToKickHideReason()"/>
				<Panel class="VotingToKickReasonHeadPanelTextGrid">
					<Label id="VotingToKickReasonHeadPanelText" html="true" text="#voting_to_kick_choose_reason_tooltip"/>
				</Panel>
			</Panel>

			<Panel class="VotingToKickReasonsList">
				<Panel class="VotingToKickReason" onactivate="VotingToKickInitVoting('feeding')">
					<Image class="VotingToKickReasonIcon" src="file://{resources}/layout/custom_game/voting_to_kick/reason_feeding.png"/>
					<Label class="VotingToKickReasonButton" text="#voting_to_kick_reason_feeding"/>
				</Panel>
				<Panel class="VotingToKickReason" onactivate="VotingToKickInitVoting('ability_abuse')">
					<Image class="VotingToKickReasonIcon" src="file://{resources}/layout/custom_game/voting_to_kick/reason_ability_abuse.png"/>
					<Label class="VotingToKickReasonButton" text="#voting_to_kick_reason_ability_abuse"/>
				</Panel>
				<Panel class="VotingToKickReason" onactivate="VotingToKickInitVoting('hateful_talk')">
					<Image class="VotingToKickReasonIcon" src="file://{resources}/layout/custom_game/voting_to_kick/reason_hateful_talk.png"/>
					<Label class="VotingToKickReasonButton" text="#voting_to_kick_reason_hateful_talk" />
				</Panel>
				<Panel class="VotingToKickReason" onactivate="VotingToKickInitVoting('afk')">
					<Image class="VotingToKickReasonIcon" src="file://{resources}/layout/custom_game/voting_to_kick/reason_afk.png"/>
					<Label class="VotingToKickReasonButton" text="#voting_to_kick_reason_afk" />
				</Panel>
			</Panel>
		</Panel>

		<Panel id="VotingToKickVoting">
			<Panel class="VotingToKickVotingHeadPanel">
				<Label id="VotingToKickVotingHeadText" html="true" text="#voting_to_kick_tooltip"/>
			</Panel>
			<Panel class="VotingToKickVotingReasonPanel">
				<Label id="VotingToKickVotingReasonText" text="#voting_to_kick_reason_tooltip"/>
			</Panel>
			<Panel id="VotingToKickModelPanel" hittest="false"/>
			<Label id="VotingToKickKDA" html="true" text="#voting_to_kick_kda_tooltip"/>

			<Panel class="VotingToKickVotingButtons">
				<Label class="VotingToKickVotingButton" id="VotingToKickVotingYes" text="#voting_to_kick_yes" onactivate="VotingToKickVoteYes()"/>
				<Label class="VotingToKickVotingButton" id="VotingToKickVotingNo" text="#voting_to_kick_no" onactivate="VotingToKickVoteNo()"/>
			</Panel>
			<Button id="ReportButton" onactivate="ReportVoting()" onmouseover="DOTAShowTextTooltip(#report_voting_hint)" onmouseout="DOTAHideTextTooltip()">
				<Label text="Report Voting"/>
			</Button>
		</Panel>
		
		<Button id="HideVotingWrap" onactivate="ToggleVotingPanel()" onmouseover="HideVotingHint()" onmouseout="DOTAHideTextTooltip()">
			<Button id="HideVotingArrowIcon"/>
		</Button>
	</Panel>
</root>
